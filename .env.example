# Proteus System Environment Configuration
# Copy this file to .env and fill in your values

# LLM API Configuration (Optional - for real LLM integration)
# LLM_API_KEY=your_api_key_here
# LLM_PROVIDER=openai  # or anthropic, etc.

# Workspace Configuration
# WORKSPACE_PATH=/your/workspace/path

# Hive Mind Integration (Optional)
# HIVE_MIND_ENABLED=true
# HIVE_MIND_URL=http://localhost:8765

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=simple

# Evolution Configuration
EVOLUTION_TRIGGER_INTERVAL=5  # Trigger evolution every N tasks

# Adaptive System Configuration
ADAPTIVE_ENABLED=true
MAX_RETRY_ATTEMPTS=3
